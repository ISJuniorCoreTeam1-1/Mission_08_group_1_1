@{
    ViewData["Title"] = "Delete";
}

@model Tasks

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete?</h3>

<form method="post" asp-controller="Home" asp-action="DeleteTodo">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="ViewTasks" class="btn btn-primary">Cancel</a>
    <input type="hidden" asp-for="TaskId"/>
</form>
