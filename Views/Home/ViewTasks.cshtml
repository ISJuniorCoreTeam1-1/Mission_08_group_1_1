<!DOCTYPE html>

@{ 
    ViewData["Title"] = "ViewTasks";
}

@model List<Tasks> 

<table class="table table-bordered">

    <thead>
        <tr>
            <td>Task</td>
            <td>Due Date</td>
            <td>Quadrant</td>
            <td>Completed</td>
            <td>Category</td>
        </tr>

    </thead>

    <tbody>
        @foreach (var x in Model)
            {
        <tr>
            <td>@x.Task</td>
            <td>@x.DueDate</td>
            <td>@x.Quadrant</td>
            <td>@x.Completed</td>
            <td>@x.CategoryId</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-TaskId="@x.TaskId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="DeleteTodo" asp-route-id="@x.TaskId">Delete</a></td>
            
           

        </tr>
            }

    </tbody>

</table>
