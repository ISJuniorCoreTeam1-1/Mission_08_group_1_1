<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @{
        ViewData["Title"] = "AddTodo";
    }

@model Tasks
</head>
<body>
    <form method="post">
        <div asp-validation-summary="All">
            <input type="hidden" asp-for="TaskId" />

            <label asp-for="Task">Task Name</label><input asp-for="Task"/>
            <br />
            <label asp-for="DueDate" type="datetime">Due Date</label><input asp-for="DueDate"/>
            <br />
            <label asp-for="Quadrant">Quadrant:</label>
            <select asp-for="Quadrant" >
                <option value="1">Quadrant 1</option>
                <option value="2">Quadrant 2</option>
                <option value="3">Quadrant 3</option>
                <option value="4">Quadrant 4 </option>
            </select>
            <br />
            <label asp-for="CategoryId">Category:</label>
            <select asp-for="CategoryId">
                <option value="">Select Category</option>
                @foreach (Category x in ViewBag.Categories)
                {
                    <option value="@x.CatergoryId">@x.CatergoryName</option>
                }
            </select>
            <br />
            <label asp-for="Completed">Completed?</label>
            <select asp-for="Completed">
                <option value="True">Yes</option>
                <option value="False">No</option>
            </select>
            <br />
            <input id="btnSend" type="submit" value="Submit" />
        </div>
 


    </form>
</body>
</html>
